set tabstop=4                   " 4 Character smart space-tabs
set shiftwidth=4
set softtabstop=4
set expandtab

set t_Co=256	                " 256 Colour mode
syntax on                       " Enable highlights

set autoindent	                " Autoindent
set fdm=syntax	                " Enable highlight
set rnu		                    " Relative line numbers
set mouse=""                    " Disable mouse
set ruler                       " Adds row and col to the status bar

set backspace=indent,eol,start  " Smart backspace behaviour

